@model CarProj.Models.ContactModels
@{
    ViewBag.Title = "Index";
}

<span><h2>Contact</h2></span>

<div class="container">
    <div class="well col-sm-4 text-center col-sm-offset-2">
        <h3> Leave a message!</h3>
        <div class="btn btn-default btn-info" data-toggle="modal" data-target="#myModal">Create Message</div>

    </div>
    <div class="well col-sm-4 col-sm-offset-2 text-center">
        <h3> Social</h3>
        <div class="btn btn-default btn-info" data-toggle="modal" data-target="#myModal2">Links</div>

    </div>
</div>


<!-- Modal -->

<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
@using (Html.BeginForm("Index", "Contact"))
{
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Create Message!</h4>
            </div>
            @Html.ValidationSummary()
            <div class="modal-body">
                
                <div class="form-group form-horizontal">
                    @Html.LabelFor(Model => Model.name, "Name")
                    @Html.TextBoxFor(Model => Model.name, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(Model => Model.email, "Email")
                    @Html.TextBoxFor(Model => Model.email, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(Model => Model.subject, "Subject")
                    @Html.TextBoxFor(Model => Model.subject, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(Model => Model.message, "Message")
                    @Html.TextAreaFor(Model => Model.message, new { @class = "form-control" })
                </div>                
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-info">Send</button>
                <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
            </div>
             
        </div>
}

    </div>
</div>

